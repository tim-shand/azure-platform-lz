{
    "properties": {
        "displayName": "Diagnostic Settings (Platform)",
        "description": "Initiative to deploy diagnostic settings to platform resources.",
        "policyType": "Custom",
        "metadata": {
            "version": "1.0.0",
            "category": "Monitoring"
        },
        "version": "1.0.0",
        "parameters": {
            "logAnalyticsWorkspaceId": {
                "type": "String",
                "metadata": {
                    "displayName": "Log Analytics Workspace ID",
                    "description": "Resource ID of the Log Analytics workspace."
                }
            },
            "diagnosticSettingName": {
                "type": "String",
                "defaultValue": "set-by-policy",
                "metadata": {
                    "displayName": "Diagnostic Setting Name"
                }
            },
            "effect": {
                "type": "String",
                "metadata": {
                    "strongType": "effect",
                    "displayName": "Effect",
                    "description": "Determine the effect of the policy assignment."
                },
                "allowedValues": [
                    "DeployIfNotExists",
                    "AuditIfNotExists",
                    "Disabled"
                ],
                "defaultValue": "AuditIfNotExists"
            },
            "logsEnabled": {
                "type": "String",
                "metadata": {
                    "displayName": "Enable logs",
                    "description": "Whether to enable logs stream to the Log Analytics workspace - True or False"
                },
                "allowedValues": [
                    "True",
                    "False"
                ],
                "defaultValue": "True"
            }
        },
        "policyDefinitions": [
            {
                "policyDefinitionReferenceId": "diagnostic_settings",
                "policyDefinitionId": "/providers/Microsoft.Management/managementGroups/PLACEHOLDER/providers/Microsoft.Authorization/policyDefinitions/diagnostic_settings",
                "parameters": {
                    "logAnalyticsWorkspaceId": {
                        "value": "[parameters('logAnalyticsWorkspaceId')]"
                    },
                    "diagnosticSettingName": {
                        "value": "[parameters('diagnosticSettingName')]"
                    },
                    "effect": {
                        "value": "[parameters('effect')]"
                    }
                }
            },
            {
                "policyDefinitionReferenceId": "azure_activity_law",
                "policyDefinitionId": "/providers/Microsoft.Management/managementGroups/PLACEHOLDER/providers/Microsoft.Authorization/policyDefinitions/azure_activity_law",
                "parameters": {
                    "logAnalyticsWorkspaceId": {
                        "value": "[parameters('logAnalyticsWorkspaceId')]"
                    },
                    "effect": {
                        "value": "[parameters('effect')]"
                    },
                    "logsEnabled": {
                        "value": "[parameters('logsEnabled')]"
                    }
                }
            }
        ]
    }
}