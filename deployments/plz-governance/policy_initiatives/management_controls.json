{
    "properties": {
        "displayName": "Management Controls",
        "description": "Initiative to enforce diagnostic and logging configuration.",
        "policyType": "Custom",
        "metadata": {
            "version": "1.0.0",
            "category": "Monitoring"
        },
        "version": "1.0.0",
        "parameters": {
            "logAnalyticsWorkspaceId": {
                "type": "String",
                "metadata": {
                    "strongType": "lawId",
                    "displayName": "Log Analytics Workspace ID",
                    "description": "Resource ID of the Log Analytics workspace."
                }
            },
            "effect": {
                "type": "String",
                "metadata": {
                    "strongType": "effect",
                    "displayName": "Effect",
                    "description": "Determine the effect of the policy assignment."
                },
                "allowedValues": [
                    "Audit",
                    "Deny",
                    "Disabled"
                ],
                "defaultValue": "Audit"
            }
        },
        "policyDefinitions": [
            {
                "policyDefinitionReferenceId": "deploy_diagnostic_settings",
                "policyDefinitionId": "/providers/Microsoft.Management/managementGroups/root/providers/Microsoft.Authorization/policyDefinitions/deploy_diagnostic_settings",
                "parameters": {
                    "logAnalyticsWorkspaceId": {
                        "value": "[parameters('logAnalyticsWorkspaceId')]"
                    },
                    "effect": {
                        "value": "[parameters('effect')]"
                    }
                },
                "groupNames": [
                    "management"
                ]
            }
        ]
    }
}