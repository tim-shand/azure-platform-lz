{
    "properties": {
        "displayName": "Deny All Resources",
        "description": "This policy denies the creation or modification of all resource types in the assigned scope.",
        "policyType": "Custom",
        "mode": "Indexed",
        "metadata": {
            "category": "Resources"
        },
        "policyRule": {
            "if": {
                "field": "type",
                "like": "Microsoft.*/*"
            },
            "then": {
                "effect": "Deny"
            }
        }
    }
}