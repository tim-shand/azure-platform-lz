{
    "properties": {
        "displayName": "Deny All Resources",
        "description": "Denies the creation or modification of all resources in the assigned scope.",
        "policyType": "Custom",
        "mode": "All",
        "metadata": {
            "category": "Governance"
        },
        "parameters": {
            "effect": {
                "type": "String",
                "defaultValue": "Audit",
                "allowedValues": [
                    "Audit",
                    "Deny",
                    "Disabled"
                ],
                "metadata": {
                    "description": "Effect defines what happens if policy conditions are met.",
                    "strongType": "effect",
                    "displayName": "Effect"
                }
            }
        },
        "policyRule": {
            "if": {
                "field": "type",
                "exists": "true"
            },
            "then": {
                "effect": "[parameters('effect')]"
            }
        }
    }
}