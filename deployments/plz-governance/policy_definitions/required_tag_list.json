{
    "properties": {
        "displayName": "Required Tags on Resources",
        "description": "Enforces existence of defined tags. Does not apply to resource groups.",
        "policyType": "Custom",
        "mode": "All",
        "metadata": {
            "category": "Tags"
        },
        "parameters": {
            "requiredTags": {
                "type": "Array",
                "metadata": {
                    "strongType": "tags",
                    "displayName": "Required Tags",
                    "description": "List of tags required on resources."
                }
            },
            "effect": {
                "type": "String",
                "defaultValue": "Audit",
                "allowedValues": [
                    "Audit",
                    "Deny",
                    "Disabled"
                ],
                "metadata": {
                    "description": "Effect defines what happens if policy conditions are met.",
                    "strongType": "effect",
                    "displayName": "Effect"
                }
            }
        },
        "policyRule": {
            "if": {
                "anyOf": [
                    {
                        "field": "[concat('tags[', parameters('requiredTags')[0], ']')]",
                        "equals": ""
                    },
                    {
                        "field": "[concat('tags[', parameters('requiredTags')[1], ']')]",
                        "equals": ""
                    },
                    {
                        "field": "[concat('tags[', parameters('requiredTags')[3], ']')]",
                        "equals": ""
                    }
                ]
            },
            "then": {
                "effect": "[parameters('effect')]"
            }
        }
    }
}